platform :ios, '11.4'

target 'FitnessTracker' do
  use_frameworks!

  pod 'Realm'
  pod 'RealmSwift'
  pod 'ReactiveSwift'
  pod 'ReactiveCocoa'
  pod 'Result'
  pod 'ReSwift'
  pod 'RxSwift'
  pod 'RxCocoa'

  target 'FitnessTrackerTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'FitnessTrackerKit' do
    use_frameworks!
    
    pod 'Realm'
    pod 'RealmSwift'
    pod 'ReactiveSwift'
    pod 'ReactiveCocoa'
    pod 'Result'
    pod 'ReSwift'
    pod 'RxSwift'
    pod 'RxCocoa'
    
    target 'FitnessTrackerKitTests' do
        inherit! :search_paths
        # Pods for testing
    end
    
end
